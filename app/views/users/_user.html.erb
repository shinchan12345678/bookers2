  <h2>User info</h2>
  <div><%= image_tag user.get_profile_image %></div>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="btn btn-outline-secondary btn-block text-center">
    <%= link_to edit_user_path(user.id) do %>
      <span><i class="fas fa-user-cog" style="color: #b3b3b3;"></i></span>
    <% end %>
  </div>
