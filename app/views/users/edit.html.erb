<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mb-3">
    <h2 class="mt-3">User info</h2>
      <% if @user.errors.any? %>
        <p><%= @user.errors.count %>件のerrorが発生しました</p>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      <!--< form_with model: User.new do |f| %>-->
        <div>
          <label class="form-label" for="user_name">Name</label>
          <%= f.text_field :name,id: "user_name",class: "form-control" %>
        </div>
        <div>
          <label class="form-label" for="user_image">Image</label>
          <p><%= f.file_field :profile_image,id: "user_image" %></p>
        </div>
        <div>
          <label class="form-label" for="user_introduction">Introduction</label>
          <%= f.text_field :introduction,id: "user_introduction",class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.submit "Update User",class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



