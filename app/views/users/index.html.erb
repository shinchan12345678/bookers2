<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="mt-3">
        <%= render 'users/user', user: @user %>
      </div>
      <div class="mt-3">
        <%= render 'books/book', book: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="m-3">Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image %></th>
            <th class="align-middle"><%= user.name %></th>
            <th class="align-middle">
              <%= link_to "Show",user_path(user.id) %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


