
<div class="col-md-8">
  <h2 class="m-3">Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <th><%= image_tag book.user.get_profile_image %></th>
        <th class="align-middle">
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </th>
        <th class="align-middle"><%= book.body %></th>
      </tr>
      <% end %>
    </thead>
  </table>
</div>

