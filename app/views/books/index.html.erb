<!--<h1>Books#index</h1>-->
 <div>
   <% if @book.errors.any? %>
    <p><%= @book.errors.count %>件のエラーが発生しました</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
 </div>

<div class="col-md-8">
  <h2 class="m-3">Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image %>
          <% end %>
        </th>
        <th class="align-middle">
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </th>
        <th class="align-middle"><%= book.body %></th>
      </tr>
        <% if false %>
          <p><%= link_to "edit",edit_book_path(book.id) %></p>
        <% end %>
      <% end %>
    </thead>
  </table>
</div>